<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.robert.chapter03.MainActivity">

    <Button
        android:id="@+id/btn_clip_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clipView"
        android:text="ClipView"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_watch_view"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/btn_watch_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="watchView"
        android:text="WatchView"
        android:textAllCaps="false"
        app:layout_constraintLeft_toRightOf="@id/btn_clip_view"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>
