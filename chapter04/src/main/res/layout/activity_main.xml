<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.robert.chapter04.MainActivity">

    <Button
        android:id="@+id/line_view1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="drawLine"
        android:text="drawLine"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/line_view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="drawRect"
        android:text="drawRect"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/line_view1"/>

    <Button
        android:id="@+id/line_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="drawPanel"
        android:text="drawPanel"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/line_view2"/>


</android.support.constraint.ConstraintLayout>
